<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <woowacourse.paint.paintBoard.DrawingPaper
        android:id="@+id/dp_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/rv_main_tools"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_main_tools"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/rs_main_width"
        app:layout_constraintEnd_toEndOf="@+id/btn_main_tools"
        app:layout_constraintStart_toStartOf="@+id/btn_main_color" />

    <com.google.android.material.slider.RangeSlider
        android:id="@+id/rs_main_width"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:valueFrom="0"
        android:valueTo="100"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/rv_main_color"
        app:layout_constraintEnd_toEndOf="@+id/btn_main_tools"
        app:layout_constraintStart_toStartOf="@+id/btn_main_color" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_main_color"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/btn_main_color"
        app:layout_constraintEnd_toEndOf="@+id/btn_main_tools"
        app:layout_constraintStart_toStartOf="@+id/btn_main_color"
        tools:listitem="@layout/item_color" />

    <Button
        android:id="@+id/btn_main_color"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:paddingHorizontal="4dp"
        android:text="@string/btn_main_color"
        app:layout_constraintBottom_toTopOf="@+id/btn_main_reset"
        app:layout_constraintEnd_toStartOf="@+id/btn_main_width"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_main_width"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="4dp"
        android:text="@string/btn_main_width"
        app:layout_constraintBottom_toBottomOf="@+id/btn_main_color"
        app:layout_constraintEnd_toStartOf="@+id/btn_main_tools"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_main_color"
        app:layout_constraintTop_toTopOf="@+id/btn_main_color" />

    <Button
        android:id="@+id/btn_main_tools"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:paddingHorizontal="4dp"
        android:text="@string/btn_main_tools"
        app:layout_constraintBottom_toBottomOf="@+id/btn_main_width"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_main_width"
        app:layout_constraintTop_toTopOf="@+id/btn_main_width" />

    <Button
        android:id="@+id/btn_main_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="@string/btn_main_reset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/btn_main_color" />

    <Button
        android:id="@+id/btn_main_redo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_main_redo"
        app:layout_constraintBottom_toBottomOf="@+id/btn_main_reset"
        app:layout_constraintEnd_toEndOf="@+id/btn_main_width"
        app:layout_constraintStart_toStartOf="@+id/btn_main_width" />

    <Button
        android:id="@+id/btn_main_undo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_main_undo"
        app:layout_constraintBottom_toBottomOf="@+id/btn_main_redo"
        app:layout_constraintEnd_toEndOf="@+id/btn_main_tools"
        app:layout_constraintStart_toStartOf="@+id/btn_main_tools" />


</androidx.constraintlayout.widget.ConstraintLayout>
